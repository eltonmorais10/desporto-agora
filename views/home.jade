html
  head
    title=title
    link(href='../css/app.css', rel='stylesheet')
    link(href='../bower_components/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='../bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    script(src='../bower_components/bootstrap/js/collapse.js')
    script(src='../bower_components/bootstrap/dist/js/bootstrap.min.js')
  body
    div
      div#home-top.row
        div#header-logo.col-xs-8 
          a(href="/")
            img(src= "../img/LOGO.png")
        if user            
          div.col-xs-4.welcome#welcome
            a(data-toggle='collapse', data-parent="#welcome", href='#user-menu')
              i.fa.fa-user.fa-fw 
              span &nbsp;&nbsp;#{user.fullName}
            div#user-menu.collapse.in
              ul
                li
                  a(href="profile") Profile
                li Settings
                li
                  a(href="/logout") Logout
        else
          p Welcome to my app, ready to get started?
          p
            a.btn.btn-primary(href="/login") Login now
          p
            span.small Don't have an account?
            span &nbsp;
            a.small(href="/register") Register now

      div#background