      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body(ng-app='boss')
    #wrapper(ng-controller='boss')
      // Navigation
      nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='boss') Desporto AGORA!
        .navbar-default.sidebar(role='navigation')
          .sidebar-nav.navbar-collapse
            ul#side-menu.nav
              li
                a(href='boss', ng-class="{active:isActiveTab('index.tpl.html')}", ng-click="onClickTab('index.tpl.html')")
                  i.fa.fa-dashboard.fa-fw
                  |  Dashboard
              li
                a(href='', ng-class="{active:isActiveTab('sources.tpl.html')}", ng-click="onClickTab('sources.tpl.html')")
                  i.fa.fa-microphone.fa-fw
                  |  Sources
              li
                a(href='', ng-class="{active:isActiveTab('news.tpl.html')}", ng-click="onClickTab('news.tpl.html')")
                  i.fa.fa-newspaper-o.fa-fw
                  |  News
              li
                a(href='', ng-class="{active:isActiveTab('users.tpl.html')}", ng-click="onClickTab('users.tpl.html')")
                  i.fa.fa-user.fa-fw
                  |  Users
      #page-wrapper(ng-include='currentTab')
